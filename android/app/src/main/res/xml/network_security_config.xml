<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuração específica para o domínio da API -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">conquistamais.zunostudio.com.br</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">10.0.3.2</domain>
    </domain-config>

    <!-- Configuração base para permitir HTTPS com certificados personalizados -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Certificados do sistema Android -->
            <certificates src="system"/>
            <!-- Certificados instalados pelo usuário -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>

    <!-- Configuração para debug (permite tudo) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>